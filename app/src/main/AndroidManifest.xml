            android:name=".activity.OrderDetailActivity"
            android:exported="false" />
        <activity
            android:name=".activity.SettingAccountActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ReportIncomeActivity"
            android:exported="false" /> <!-- Firebase metadata untuk notifikasi (optional) -->
