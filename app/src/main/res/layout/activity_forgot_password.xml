<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundLight"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="50dp"
    android:paddingBottom="20dp">

    <!-- Title -->
    <TextView
        android:id="@+id/historyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lupa Password"
        android:fontFamily="@font/sf"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="38dp"
        android:layout_marginEnd="14dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/etEmailPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Email atau Nomor HP"
            android:background="@drawable/rounded_form"
            android:textColor="@color/blue"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnSendOtp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="Kirim OTP"
            android:textColor="@color/blue"
            android:layout_gravity="center"
            android:background="@drawable/rounded_button"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <EditText
        android:id="@+id/etInputOtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan Password Baru"
        android:background="@drawable/rounded_form"
        android:textColor="@color/blue"
        android:layout_marginTop="30dp"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnNextResetPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ubah Password"
        android:layout_marginTop="20dp"
        android:textColor="@color/blue"
        android:layout_gravity="center"
        android:background="@drawable/rounded_button"
        android:visibility="gone"/>
</LinearLayout>
