<!-- res/layout/item_order_detail.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/rounded_form">

    <!-- Bagian Kiri: Menu Name dan Menu Price (Vertikal) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/menuName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf"
            android:text="Menu Name"
            android:textColor="@color/blue"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/menuPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf"
            android:text="Rp. 0"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Bagian Kanan: Menu Quantity dan Menu Total Price (Horizontal, sejajar dengan bagian kiri) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/menuQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x0"
            android:fontFamily="@font/sf"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/menuTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp. 0"
            android:fontFamily="@font/sf"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:gravity="end" />
    </LinearLayout>

</LinearLayout>
